{% for user in users %}
  <div data-role="main" class="ui-content">
    <div data-role="collapsible">
      <h1>{{ user.username }} - Click to see details!</h1>
      <h2>Use the links below</h2><br />
{% if groups.tag_role_control is defined %}
      For SSH access over web ({{ user.username }}/{{ admin_password }}):<br />
{% for vm in groups.tag_role_control if vm in groups['tag_pod_' + user.username] %}
<a href="/{{ user.username }}" target="control_node_url_{{ user.username }}">{{ user.username }}</a><br />
      or<br />
<a href="https://{{ vm }}:{{ wetty_port }}" target="control_node_url_{{ user.username }}">https://{{ vm }}:{{ wetty_port }}</a><br />
{% endfor %}
{% endif %}<br />
      <h2>Inventory</h2>
      <p>[all:vars]<br />
ansible_user={{ user.username }}<br />
ansible_ssh_pass={{ admin_password }}<br />
{% if ssh_port is defined %}<br />
ansible_port={{ ssh_port }}<br />
{% endif %}
<br />
{% if groups.tag_role_web is defined %}
[web]<br />
{% for vm in groups.tag_role_web if vm in groups['tag_pod_' + user.username] %}
{{ hostvars[vm].hostname }} ansible_host={{ vm }}<br />
{% endfor %}
{% endif %}
<br />
{% if groups.tag_role_control is defined %}
[control]<br />
{% for vm in groups.tag_role_control if vm in groups['tag_pod_' + user.username] %}
{{ hostvars[vm].hostname }} ansible_host={{ vm }}<br />
{% endfor %}
{% endif %}</p>
    </div>
  </div>
{% endfor %}
  <div data-role="footer">
    <h1>Thanks for participating!</h1>
  </div>
</div>

